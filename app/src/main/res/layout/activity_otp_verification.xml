<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiscreens.OtpVerificationActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/appThemeColor"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_marginTop="56dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:text="OTP Verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="324dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Enter the code from the sms we sent \nto 1234567890"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/appThemeColor"
        android:gravity="center"
        android:textSize="16sp"
        android:text="02.32"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.chaos.view.PinView
        android:id="@+id/otp_pinView"
        style="@style/PinWidget.PinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="20dp"
        android:cursorVisible="true"
        android:elevation="90dp"
        android:inputType="number"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cursorColor="@color/appThemeColor"
        app:cursorWidth="2dp"
        app:itemCount="6"
        app:itemHeight="55dp"
        app:itemRadius="6dp"
        app:itemSpacing="11dp"
        app:itemWidth="55dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:lineColor="@color/appThemeColor"
        app:lineWidth="2dp"
        app:viewType="rectangle">

    </com.chaos.view.PinView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="171dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|end"
        android:text="I didn't receive any code "
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_pinView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|start"
        android:text="RESEND"
        android:textColor="@color/appThemeColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/otp_pinView"
        app:layout_constraintTop_toBottomOf="@+id/otp_pinView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="384dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/text_background"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>