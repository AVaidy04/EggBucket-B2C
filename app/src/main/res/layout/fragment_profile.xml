<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomNavigation.ui.ProfileFragment"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/appThemeColor"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left"
            android:tint="@color/white"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Page"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="20dp"
           android:textColor="@color/black"
           android:textSize="20sp"
           android:textStyle="bold" />

       <androidx.cardview.widget.CardView
           app:cardBackgroundColor="@color/appThemeColor"
           android:layout_width="match_parent"
           android:layout_height="130dp"
           android:layout_marginTop="20dp"
           app:cardCornerRadius="10dp"
           android:layout_marginBottom="10dp"
           android:layout_marginHorizontal="20dp"
           app:cardElevation="0dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
           android:orientation="horizontal">

           <!-- Profile Image -->
               <androidx.cardview.widget.CardView
                   android:layout_width="90dp"
                   android:layout_height="70dp"
                   android:layout_marginHorizontal="5dp"
                   app:cardBackgroundColor="@color/appThemeColor"
                   app:cardElevation="0dp"
                   app:cardMaxElevation="2dp">

                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/vector" />
               </androidx.cardview.widget.CardView>

       <!-- Name and Phone Number Layout -->
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/personName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="start"
                       android:text="Shubham Anand"
                       android:textColor="@color/white"
                       android:textSize="16sp"
                       android:textStyle="bold" />

                   <TextView
                       android:id="@+id/phoneNo"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:gravity="start"
                       android:text="+91 8102651970"
                       android:textColor="@color/white"
                       android:textSize="16sp"
                       android:textStyle="bold" />
               </LinearLayout>
           </LinearLayout>
    </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="10dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="0dp"
               android:background="@color/white"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:background="@color/white"
                   android:clickable="true"
                   android:focusable="true"
                   android:id="@+id/editProfileLayout"
                   >
                   <androidx.cardview.widget.CardView

                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       app:cardCornerRadius="100dp"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="10dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/white"
                       >

                       <ImageView
                           android:id="@+id/imageView20"
                           android:layout_width="32dp"
                           android:layout_height="32dp"
                           android:layout_gravity="center"
                           android:background="@color/white"
                           android:src="@drawable/baseline_person_24" />


                   </androidx.cardview.widget.CardView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Edit profile"
                       android:textSize="14dp"
                       android:layout_marginStart="15dp"
                       android:textColor="@color/black"
                       />
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       >
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/arrow"
                           android:layout_alignParentEnd="true"
                           android:layout_marginEnd="10dp"
                           android:layout_centerVertical="true"
                           />
                   </RelativeLayout>
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginHorizontal="10dp"
                   android:background="#D3D3D3"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:background="@color/white"
                   android:clickable="true"
                   android:focusable="true"
                   android:id="@+id/editProfileLayout_1"
                   >
                   <androidx.cardview.widget.CardView

                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       app:cardCornerRadius="100dp"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="10dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/white"
                       >

                       <ImageView
                           android:id="@+id/imageView20_1"
                           android:layout_width="23dp"
                           android:layout_height="23dp"
                           android:layout_gravity="center"
                           android:background="@color/white"
                           android:src="@drawable/shedule" />


                   </androidx.cardview.widget.CardView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Schedule Deliveries"
                       android:textSize="14dp"
                       android:layout_marginStart="15dp"
                       android:textColor="@color/black"
                       />
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       >
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/arrow"
                           android:layout_alignParentEnd="true"
                           android:layout_marginEnd="10dp"
                           android:layout_centerVertical="true"
                           />
                   </RelativeLayout>
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginHorizontal="10dp"
                   android:background="#D3D3D3"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:background="@color/white"
                   android:clickable="true"
                   android:focusable="true"
                   android:id="@+id/editProfileLayout_2"
                   >
                   <androidx.cardview.widget.CardView

                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       app:cardCornerRadius="100dp"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="10dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/white"
                       >

                       <ImageView
                           android:id="@+id/imageView20_2"
                           android:layout_width="23dp"
                           android:layout_height="23dp"
                           android:layout_gravity="center"
                           android:background="@color/white"
                           android:src="@drawable/bell" />


                   </androidx.cardview.widget.CardView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/title_notifications"
                       android:textSize="14dp"
                       android:layout_marginStart="15dp"
                       android:textColor="@color/black"
                       />
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       >
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/arrow"
                           android:layout_alignParentEnd="true"
                           android:layout_marginEnd="10dp"
                           android:layout_centerVertical="true"
                           />
                   </RelativeLayout>
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginHorizontal="10dp"
                   android:background="#D3D3D3"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:background="@color/white"
                   android:clickable="true"
                   android:focusable="true"
                   android:id="@+id/yourOrdersLayout"
                   >
                   <androidx.cardview.widget.CardView

                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="100dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginStart="10dp"
                    app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/white"
                   >
                       <ImageView
                           android:id="@+id/imageView9"
                           android:layout_width="26dp"
                           android:layout_height="26dp"
                           android:layout_gravity="center"
                           android:background="@color/white"
                           android:src="@drawable/history" />


                   </androidx.cardview.widget.CardView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Order History"
                       android:textSize="14dp"
                       android:layout_marginStart="15dp"
                       android:textColor="@color/black"
                       />
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       >
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/arrow"
                           android:layout_alignParentEnd="true"
                           android:layout_marginEnd="10dp"
                           android:layout_centerVertical="true"
                           />
                   </RelativeLayout>
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginHorizontal="10dp"
                   android:background="#D3D3D3"/>

               <LinearLayout
                   android:id="@+id/addressesLayout"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   >
                   <androidx.cardview.widget.CardView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       app:cardCornerRadius="100dp"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="10dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/white"
                       >

                       <ImageView
                           android:id="@+id/imageView6"
                           android:layout_width="32dp"
                           android:layout_height="32dp"
                           android:layout_gravity="center"
                           android:src="@drawable/address" />

                   </androidx.cardview.widget.CardView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Addresses"
                       android:textSize="14dp"
                       android:layout_marginStart="15dp"
                       android:textColor="@color/black"
                       />
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       >
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/arrow"
                           android:layout_alignParentEnd="true"
                           android:layout_marginEnd="10dp"
                           android:layout_centerVertical="true"
                           />
                   </RelativeLayout>
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="10dp"
                   android:background="#D3D3D3" />


               <LinearLayout
                   android:id="@+id/logoutLayout"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:background="@color/white"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="10dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/white"
                       app:cardCornerRadius="100dp">

                       <ImageView
                           android:id="@+id/imageView8"
                           android:layout_width="32dp"
                           android:layout_height="32dp"
                           android:layout_gravity="center"
                           android:src="@drawable/Logout" />

                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="15dp"
                       android:text="Log out"
                       android:textColor="@color/black"
                       android:textSize="14dp" />

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
               </LinearLayout>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>



</FrameLayout>