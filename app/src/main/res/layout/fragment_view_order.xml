<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 🔙 Header with Back Button -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appThemeColor"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/arrow_left"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Order Details "
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- 🔝 Order ID -->
    <TextView
        android:id="@+id/orderNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order # {ID}"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ETA -->
    <TextView
        android:id="@+id/etaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arriving in 3 to 4 hrs"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/orderNote"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 📍 Address Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/addressCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/etaLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/location"
                app:tint="@color/appThemeColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/buildingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/locationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#666666" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 🚴 Delivery Partner Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/deliveryPartnerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/addressCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/deliveryIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/delivery"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deliveryPartnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/deliveryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your order is on the way"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/phone"
                android:layout_marginEnd="12dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- 📦 Order Summary -->
    <androidx.cardview.widget.CardView
        android:id="@+id/orderSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/deliveryPartnerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/appThemeColor"
                android:layout_marginBottom="10dp" />

            <!-- Dynamic Items -->
            <LinearLayout
                android:id="@+id/itemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- totals box for better separation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F7F7F7"
                android:padding="12dp"
                android:layout_marginTop="12dp">

                <!-- Subtotal -->
                <TextView
                    android:id="@+id/subtotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subtotal: ₹0"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="end"
                    android:layout_marginBottom="2dp" />

                <!-- Delivery (set via code; can be 0 for now) -->
                <TextView
                    android:id="@+id/deliveryPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery: ₹0"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Grand Total highlight row -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFF3E6"
                    android:padding="14dp"
                    android:gravity="center_vertical">



                    <TextView
                        android:id="@+id/grandTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 💳 Payment method (outside order summary; no icon) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/paymentMethodCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/orderSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/paymentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textSize="13sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/paymentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/paymentHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay in cash or via UPI at delivery"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/thankYouBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Thank you for shopping from us"
        android:textColor="#FFFFFF"
        android:background="@drawable/login_sendotp_back"
        android:elevation="4dp"
        android:enabled="true"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>
