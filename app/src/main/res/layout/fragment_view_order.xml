<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 🔙 Header with Back Button -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/appThemeColor"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left"
            android:tint="@color/white"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Order Details "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- 📍 Address Label -->
    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 📍 Address Section -->
    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressLabel" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/locationIcon"
        app:layout_constraintTop_toTopOf="@id/locationIcon"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/buildingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Building name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Location Name, Area Name"
            android:textSize="14sp"
            android:textColor="#777777" />
    </LinearLayout>

    <!-- 🛒 Order Summary -->
    <LinearLayout
        android:id="@+id/orderSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CCAAAAAA"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/locationIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/appThemeColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Dynamic Items -->
        <LinearLayout
            android:id="@+id/itemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Dynamic Total -->
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: ₹0"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- 🛵 Delivery Partner -->
    <TextView
        android:id="@+id/deliveryLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delivery Partner Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/orderSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/deliveryIcon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/delivery"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/deliveryLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/callIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/phone"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/deliveryIcon"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 📝 Order Note -->
    <TextView
        android:id="@+id/orderNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your order is placed.\n\n  Note: Payment is accepted only in COD mode"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/deliveryIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 🟧 Thank You Button -->
    <Button
        android:id="@+id/thankYouBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thank you for shopping from us"
        android:backgroundTint="@color/appThemeColor"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="24dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/orderNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>