<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/liniarLayoutSuccess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Image + Confetti overlay -->
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <!-- Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/page"
            android:contentDescription="Order Success Image"
            android:scaleType="centerInside"/>

        <!-- Confetti Animation -->
        <nl.dionsegijn.konfetti.xml.KonfettiView
            android:id="@+id/konfettiView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- Success Message -->
    <TextView
        android:id="@+id/orderSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Order has been\nPlaced Successfully!"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <!-- CONTINUE SHOPPING Button -->
    <Button
        android:id="@+id/gotoHome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/orange"
        android:text="Continue Shopping"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="0dp"/>

    <!-- VIEW ORDER Button -->
    <Button
        android:id="@+id/gotoViewOrder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/orange"
        android:text="View Order Details"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="0dp"/>

    <!-- Check Out New Recipes Button -->
    <Button
        android:id="@+id/gotoRecipes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/orange"
        android:text="Fresh Flavours"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="0dp"/>

</LinearLayout>
