<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeScreen"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp"
            android:background="@color/lightfadeorange"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/topImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Top image"
                android:src="@drawable/egg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/comfortaabold"
                android:text="@string/egg_bucket"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/topImage"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        <View-->
<!--            android:id="@+id/divider"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/constraintLayout"-->
<!--            android:background="#EA1F1D1D"-->
<!--            android:paddingHorizontal="-16dp" />-->
        <LinearLayout
            android:id="@+id/MainBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <!-- Top Image -->




            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/carouselViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="true" />

            <!-- Carousel Indicators -->
            <LinearLayout
                android:id="@+id/indicatorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/indicator1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_active"
                    android:contentDescription="Active indicator" />

                <ImageView
                    android:id="@+id/indicator2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:contentDescription="Inactive indicator" />

                <ImageView
                    android:id="@+id/indicator3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:contentDescription="Inactive indicator" />

            </LinearLayout>
            <!-- Category Item -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/category_background"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/categoryIcon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="Category icon"
                    android:src="@drawable/egg" />

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Egg"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!-- Product Card 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Image -->
                        <ImageView
                            android:id="@+id/itemImage1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="Product image"
                            android:src="@drawable/six_piece_eggs" />

                        <!-- Text Section -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/itemName1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eggs"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="6 pieces"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="â‚¹60 /pack"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Add Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/white"
                            android:text="Add"
                            android:textColor="@color/appThemeColor"
                            android:visibility="visible"
                            app:cornerRadius="10dp"
                            app:strokeColor="@color/appThemeColor"
                            app:strokeWidth="2dp" />
                        <!-- Counter Section -->
                        <LinearLayout
                            android:id="@+id/counterLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <Button
                                android:id="@+id/decrementButton1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/appThemeColor"
                                android:gravity="center"
                                android:padding="0dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/itemCount1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/incrementButton1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/appThemeColor"
                                android:gravity="center"
                                android:padding="0dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Repeat similar blocks for itemCard2 and itemCard3 -->

                <!-- Product Card 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Image -->

                        <!-- Text Section -->
                        <ImageView
                            android:id="@+id/itemImage2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="16dp"
                            android:padding="5dp"
                            android:contentDescription="Product image"
                            android:src="@drawable/eggs_image_12" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/itemName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eggs"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="12 pieces"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="â‚¹120 /pack"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Add Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/white"
                            android:text="Add"
                            android:textColor="@color/appThemeColor"
                            app:cornerRadius="10dp"
                            app:strokeColor="@color/appThemeColor"
                            app:strokeWidth="2dp" />

                        <LinearLayout
                            android:id="@+id/counterLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <Button
                                android:id="@+id/decrementButton2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/appThemeColor"
                                android:gravity="center"
                                android:padding="0dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/itemCount2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/incrementButton2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/appThemeColor"
                                android:gravity="center"
                                android:padding="0dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Product Card 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Image -->
                        <ImageView
                            android:id="@+id/itemImage3"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="5dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="Product image"
                            android:src="@drawable/thirty_piece_eggs" />

                        <!-- Text Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/itemName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eggs"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="30 pieces"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="â‚¹300 /pack"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Add Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/white"
                            android:text="Add"
                            android:textColor="@color/appThemeColor"
                            app:cornerRadius="10dp"
                            app:strokeColor="@color/appThemeColor"
                            app:strokeWidth="2dp" />

                        <LinearLayout
                            android:id="@+id/counterLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <Button
                                android:id="@+id/decrementButton3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/appThemeColor"
                                android:gravity="center"
                                android:padding="0dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/itemCount3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/incrementButton3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/appThemeColor"
                                android:gravity="center"
                                android:padding="0dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/MainBody"
            android:layout_marginTop="200dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/deliverytruck"
                />
            <TextView
                android:id="@+id/footerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footerText1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="14sp"
                android:paddingBottom="15dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cashondelivery"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/footer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footerText2"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="14sp" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/serviceemail"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/footer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footerText3"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
