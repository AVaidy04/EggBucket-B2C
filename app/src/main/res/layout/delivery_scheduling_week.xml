<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="fill_horizontal">
    <!-- Back Arrow -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:contentDescription="Back"
        android:padding="4dp"
        android:src="@drawable/baseline_arrow_back_24" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/appThemeColor"
        android:text="Save"
        android:textColor="#fff" />
    </LinearLayout>

    <!-- Repeat Every Text -->
    <TextView
        android:id="@+id/repeat_every_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:text="Repeat Every"
        android:textColor="#000"
        android:textSize="16sp" />

    <!-- Repeat Every Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="fill_horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- Week Button -->
        <ToggleButton
            android:id="@+id/repeat_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/toggle_button_selector"
            android:textOn="Week"
            android:textOff="Week"
            android:textColor="#000" />

        <!-- Month Button -->
        <ToggleButton
            android:id="@+id/repeat_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_button_selector"
            android:textOn="Month"
            android:textOff="Month"
            android:textColor="#000" />

    </LinearLayout>

    <!-- Repeats On Text -->
    <TextView
        android:id="@+id/repeats_on_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="4dp"
        android:text="Repeats On"
        android:textColor="#000"
        android:textSize="16sp" />

    <!-- Repeats On Days -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Days (M, T, W, T, F, S, S) -->
        <ToggleButton
            android:id="@+id/mon_toggle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_button_selector"
            android:textOff="M"
            android:textOn="M"
        android:textColor="#000"
        android:checked="false"/>

        <ToggleButton
            android:id="@+id/tue_toggle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"

            android:background="@drawable/toggle_button_selector"
            android:checked="false"
            android:textColor="#000"
            android:textOff="T"
            android:textOn="T"
            android:layout_marginStart="8dp"/>

        <ToggleButton
            android:id="@+id/wed_toggle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"

            android:background="@drawable/toggle_button_selector"
            android:checked="false"
            android:textColor="#000"
            android:textOff="W"
            android:textOn="W"
            android:layout_marginStart="8dp"/>

        <ToggleButton
            android:id="@+id/thu_toggle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"

            android:background="@drawable/toggle_button_selector"
            android:checked="false"
            android:textColor="#000"
            android:textOff="T"
            android:textOn="T"
            android:layout_marginStart="8dp"/>

        <ToggleButton
            android:id="@+id/fri_toggle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"

            android:background="@drawable/toggle_button_selector"
            android:checked="false"
            android:textColor="#000"
            android:textOff="F"
            android:textOn="F"
            android:layout_marginStart="8dp"/>

        <ToggleButton
            android:id="@+id/sat_toggle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"

            android:background="@drawable/toggle_button_selector"
            android:checked="false"
            android:textColor="#000"
            android:textOff="S"
            android:textOn="S"
            android:layout_marginStart="8dp"/>

        <ToggleButton
            android:id="@+id/sun_toggle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"

            android:background="@drawable/toggle_button_selector"
            android:checked="false"
            android:textColor="#000"
            android:textOff="S"
            android:textOn="S"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


</LinearLayout>
