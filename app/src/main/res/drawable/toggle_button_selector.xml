<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the ToggleButton is checked (on) -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/appThemeColor"/> <!-- Yellow background when checked -->
            <corners android:radius="25dp"/> <!-- Rounded corners -->
            <stroke android:width="0dp" android:color="@color/appThemeColor"/> <!-- Border color -->
        </shape>
    </item>

    <!-- State when the ToggleButton is unchecked (off) -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="#D3D3D3"/> <!-- Gray background when unchecked -->
            <corners android:radius="25dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#B0B0B0"/> <!-- Border color -->
        </shape>
    </item>
</selector>