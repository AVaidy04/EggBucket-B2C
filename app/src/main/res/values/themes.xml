<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EggBucketB2C" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/grey</item>
    </style>

    <style name="Theme.EggBucketB2C" parent="Base.Theme.EggBucketB2C" />

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxBackgroundColor">#7CF1D3B5</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#090908</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="Theme.EggBucketB2C.Fullscreen" parent="Theme.EggBucketB2C">
        <item name="android:actionBarStyle">@style/Widget.Theme.EggBucketB2C.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.EggBucketB2C.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>